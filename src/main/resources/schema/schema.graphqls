type Query {
    fetchShows(titleFilter: String): [Show]
    fetchShow(id: Int): Show
}

type Mutation {
    addShow(title: String, starScore: Int): Show
}

type Show @key (fields: "id") {
    id: ID!
    title: String!
    reviews: [Review]
}

type Review @key (fields: "id") {
    id: ID!
    starScore: Int
}